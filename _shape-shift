#compdef _shape-shift shape-shift

_shape-shift() {
    local line

    list=$(find "$HOME/.shapeshift" -mindepth 2 -maxdepth 2 -type d | sed -E 's/.*\.shapeshift\///')
    _arguments -C \
        "-h[Show help information]" \
        "--h[Show help information]" \
        "1: :($list)" \
        "*::arg:->args"
}
